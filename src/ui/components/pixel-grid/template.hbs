<div class="pixel-grid">

  {{#each @frame key="@index" as |row|}}
    <div class="row">

      {{#each row key="id" as |pixel|}}
        <div
          class="pixel"
          style="background-color: {{pixel.color}}"
          onmousedown={{action onMouseDown pixel}}
          onmouseover={{action onMouseOver pixel}}
        ></div>
      {{/each}}

    </div>
  {{/each}}

</div>