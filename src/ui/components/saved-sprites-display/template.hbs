<div class="saved-sprites-display">
  {{#if @sprites.length}}
    <div class="title">Open a project</div>

    <div class="sprites">
      {{#each @sprites key="name" as |sprite|}}

        <div class="sprite-entry">
          <div class="controls">
            <button class="open"
                    title="open sprite"
                    onclick={{action openSprite sprite}}>
              {{sprite.name}}
            </button>

            <two-click-delete
              @action={{action deleteSprite sprite}}
            />
          </div>

          <div class="preview">
            <pixel-grid
              @editable="false"
              @frame={{sprite.firstFrame}}
            />
          </div>
        </div>

      {{/each}}
    </div>
  {{/if}}
</div>